<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.example.demo.dao.ArticleDao">
	<select id="getArticleById" resultType="Article">
		select * from article where aid = #{aid}
	</select>

	<insert id="add" useGeneratedKeys="true" keyProperty="id">
		insert into article set title=#{title}, `body`=#{body}, uid = ${1}, tag=${1}
	</insert>
	
	<update id="update">
		update article set title = #{title}, `body`=#{body}, updateDate=now() where aid = #{aid}
	</update>
	
	<delete id="delete">
		delete from article where aid = #{aid}
	</delete>
</mapper>
 